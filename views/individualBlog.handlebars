<div class="row p-4">
    <div class="col-md-6">
        <input type="hidden" id="blog_id" value="{{blog.id}}">
        <h2 class="individual-blog-title">{{blog.title}}</h2>
        <p>{{blog.content}}</p>
        <h3>By: {{blog.user.username}}, {{formatDate blog.createdAt}}</h3>

    </div>

    <div class="col-md-6">
        <div class="text-center">
            {{#if loggedIn}}
            <form id="commentForm" class="border p-3">
                <div>
                    <label for="comment" class="form-label">Write your comment here:</label>
                    <textarea id="comment" class="form-control"></textarea>
                </div>

                <button>submit</button>
            </form>
            {{/if}}
        </div>
        {{!-- create a section that will display each of the comments --}}
        <div class="p-3">
            <h3 class="text-center">Comment section:</h3>
            {{#if blog.comments }}
            <div>
                {{#each blog.comments as |comment|}}
                <div>
                    <h4>{{comment.content}}</h4>
                    <p>{{comment.user.username}}</p>
                </div>
                {{/each}}
            </div>
            {{else}}
            <p>No comments for this post yet.</p>
            {{/if}}
        </div>

    </div>
</div>




<script src="/js/comment.js"></script>